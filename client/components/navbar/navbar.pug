      img.navbar-brand(ng-src="/assets/images/logos/logo_menor_7_transparente.png")
    button.navbar-toggle(type='button' ng-click='$ctrl.isCollapsed = !$ctrl.isCollapsed' layout-align="center center")
      div(layout="column")
        div(layout="column" layout-align="center center")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar    
    div.navbar-collapse.collapsed.dropdown(uib-collapse='$ctrl.isCollapsed' ng-click='$ctrl.isCollapsed = !$ctrl.isCollapsed' layout-align="right right" data-toggle="collapse" data-target=".collapse.in")
      ul.nav.navbar-nav
        li.menuAnchor(ng-repeat='item in $ctrl.menu')
          a#Itens(ng-href='{{item.link}}') {{item.title}}
        a#Itens(target="_blank" href="https://medium.com/doebem")
          md-button#blog.md-raized.md-primary Blog
        a#Itens(target="_blank" href="")
          md-button#doar_button.md-raized.md-primary(ng-click="$ctrl.showDialog()") Doar

script(type="text/ng-template" id="dialogDonateNavbar.tmpl.pug")
  md-dialog(aria-label="emailSend" ng-cloak)
    md-toolbar
      div.md-toolbar-tools
        h2(layout-align="center") Faça sua doação!
        span(flex)
        md-button.md-icon-button(aria-label="md-button ok" ng-click="cancel()") X
    md-dialog-content
      div.md-dialog-content
        form(role="form" name = "pagarmeForm")
          h4 Escolha a organização:
          md-input.md-block(layout="row" layout-wrap flex)
            div(ng-repeat = "org in $ctrl.org")
              md-checkbox(ng-click="$ctrl.toggle(org, $ctrl.selected)" 
                          ng-checked="$ctrl.exists(org, $ctrl.selected)") {{org}}
          h4 Escolha o valor da sua doação:
          md-radio-group(layout="row" ng-model="pagarmeForm.amount" layout-wrap flex)
            div(ng-repeat="option in $ctrl.options")
              md-radio-button(ng-value="option.value" aria-label="option.value" 
                              ng-if="!option.input" ng-checked="option.value") {{option.label}}
              md-radio-button.md-radio-interactive(ng-value="{{$ctrl.Custom}}" aria-label="option.value" 
                              ng-if="option.input" ) 
                input(ng-model="$ctrl.Custom" type="text" ui-money-mask 
                      currency-symbol="R$" placeholder="Outro") 
            //- md-radio-button(ng-value="1000" aria-label="R$10") R$ 10
            //- md-radio-button(ng-value="2000" aria-label="R$20") R$ 20
            //- md-radio-button(ng-value="3000" aria-label="R$40") R$ 40
            //- md-radio-button(ng-value="5000" aria-label="R$50") R$ 50
            //- md-radio-button(ng-value="10000" aria-label="R$100") R$ 100
            //- md-radio-button(ng-value="20000" aria-label="R$200") R$ 200
            //- md-radio-button(ng-value="" aria-label="Label 2")
            //- input(type="text" ui-money-mask currency-symbol="R$"
            //-       ng-model="pagarmeForm.amount" id="amount_another" 
            //-       ng-click="t.focusAmountOther()" placeholder="Outro" 
            //-       class="ng-pristine ng-untouched ng-valid ng-empty")
          br
          md-input.md-block(layout="row" data-checked="checked")
            md-checkbox(ng-model="pagarmeForm.doebem" ng-watch [checked]="true") Acrescentar +10% para a doebem?
          md-dialog-actions(layout="row" layout-align="center")
            md-button.md-raized.md-primary#doarMe(ng-click="$ctrl.callPagarme(pagarmeForm)" type="submit") Doar
            