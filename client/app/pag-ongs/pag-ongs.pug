div.animated.fadeIn#pagOng
  div#pageHeader(flex="100"  layout="column" layout-align="center center" ng-style="{'background-image': 'url(' + $ctrl.infoOng.backgroundImage + ')'}")
    h2 {{$ctrl.infoOng.nomeFantasia}}
  div.container
    div#infos(layout="row" layout-sm="column" layout-xs="column")
      div(flex="80" layout-align="start")
        img#princ(ng-src="")      
      div#smallInfo(layout="column" layout-align="start start")
        checkout-form
    div(layout="column")
      div#lista( layout="column" layout-align="left")
        h2 Sobre
        p(ng-bind-html='$ctrl.infoOng.sobre')
        a(layout-align="center center" target="_blank" ng-href="{{$ctrl.infoOng.linkPaypal}}")
          md-button.md-raized.md-primary(type="submit") Doar
          img(src="../assets/images/logos/pagseguro.png", alt="")
        h2#resumo Resumo - Análise doebem
        h3 Impacto
        p(ng-bind-html='$ctrl.infoOng.analiseImpacto')
        h3 Gestão
        p(ng-bind-html='$ctrl.infoOng.analiseGestao')
        h3 Transparência
        p(ng-bind-html='$ctrl.infoOng.analiseTransparencia')
        a(ng-href="{{$ctrl.infoOng.linkPdf}}" target="_blank")
         p#anaCompl Confira aqui o arquivo com nossa análise completa.
        a(layout-align="center center" target="_blank" ng-href="{{$ctrl.infoOng.linkPaypal}}")
          md-button.md-raized.md-primary(type="submit") Doar
          img(src="../assets/images/logos/pagseguro.png", alt="")
